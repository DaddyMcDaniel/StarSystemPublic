/*
SUMMARY: World Diff Schema v1
==============================
Defines object and graph difference format with stable IDs for tracking world changes.
Enables version control-like functionality for mini-planet modifications and building histories.

KEY COMPONENTS:
- diff_metadata: Change context and versioning information
- object_changes: Added, modified, and removed world objects
- graph_changes: Structural relationship modifications
- spatial_changes: Position and transform updates

USAGE:
- Generated by tools.validators.world_diff when comparing world states
- Enables undo/redo functionality across building sessions
- Supports change visualization and history tracking
- Saved to runs/{run_id}/diff.json

RELATED FILES:
- tools: validators.world_diff
- artifacts: runs/{run_id}/diff.json
- supports: building history, undo systems, collaborative editing
*/

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:starsystem:schema:world_diff:v1",
  "version": 1,
  "title": "World Diff Schema",
  "description": "Object and graph difference format with stable IDs for world change tracking",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "diff_metadata": {
      "type": "object",
      "description": "Change context and versioning information",
      "additionalProperties": false,
      "properties": {
        "diff_id": {"type": "string"},
        "created_at": {"type": "string", "format": "date-time"},
        "from_version": {"type": "string"},
        "to_version": {"type": "string"},
        "author": {"type": "string"},
        "description": {"type": "string"},
        "change_summary": {
          "type": "object",
          "properties": {
            "objects_added": {"type": "integer", "minimum": 0},
            "objects_modified": {"type": "integer", "minimum": 0},
            "objects_removed": {"type": "integer", "minimum": 0},
            "total_changes": {"type": "integer", "minimum": 0}
          }
        }
      },
      "required": ["diff_id", "created_at", "from_version", "to_version"]
    },
    "object_changes": {
      "type": "object",
      "description": "Added, modified, and removed world objects",
      "additionalProperties": false,
      "properties": {
        "added": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "object_id": {"type": "string"},
              "object_type": {"type": "string"},
              "position": {"type": "object", "properties": {"x": {"type": "number"}, "y": {"type": "number"}, "z": {"type": "number"}}},
              "properties": {"type": "object"},
              "parent_id": {"type": "string"}
            },
            "required": ["object_id", "object_type", "position"]
          }
        },
        "modified": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "object_id": {"type": "string"},
              "changes": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "old_value": {},
                    "new_value": {},
                    "change_type": {"type": "string", "enum": ["property", "position", "rotation", "scale"]}
                  }
                }
              }
            },
            "required": ["object_id", "changes"]
          }
        },
        "removed": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "object_id": {"type": "string"},
              "object_type": {"type": "string"},
              "final_position": {"type": "object", "properties": {"x": {"type": "number"}, "y": {"type": "number"}, "z": {"type": "number"}}},
              "final_properties": {"type": "object"}
            },
            "required": ["object_id", "object_type"]
          }
        }
      }
    },
    "graph_changes": {
      "type": "object",
      "description": "Structural relationship modifications",
      "additionalProperties": false,
      "properties": {
        "connections_added": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from_id": {"type": "string"},
              "to_id": {"type": "string"},
              "relationship_type": {"type": "string"},
              "properties": {"type": "object"}
            },
            "required": ["from_id", "to_id", "relationship_type"]
          }
        },
        "connections_removed": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from_id": {"type": "string"},
              "to_id": {"type": "string"},
              "relationship_type": {"type": "string"}
            },
            "required": ["from_id", "to_id", "relationship_type"]
          }
        }
      }
    },
    "spatial_changes": {
      "type": "object",
      "description": "Position and transform updates",
      "additionalProperties": false,
      "properties": {
        "bounding_box_delta": {
          "type": "object",
          "properties": {
            "min_change": {"type": "object", "properties": {"x": {"type": "number"}, "y": {"type": "number"}, "z": {"type": "number"}}},
            "max_change": {"type": "object", "properties": {"x": {"type": "number"}, "y": {"type": "number"}, "z": {"type": "number"}}}
          }
        },
        "affected_regions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "region_id": {"type": "string"},
              "change_density": {"type": "number", "minimum": 0, "maximum": 1}
            }
          }
        }
      }
    }
  },
  "required": ["diff_metadata", "object_changes"]
}