{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/patch_plan.schema.json",
  "title": "Patch Plan Schema",
  "description": "Schema for Godot scene patch operations",
  "type": "object",
  "properties": {
    "operations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {"enum": ["add_node", "modify_property", "delete_node", "add_script"]},
          "target_path": {"type": "string"},
          "data": {"type": "object"}
        },
        "required": ["type", "target_path"]
      }
    },
    "dry_run": {"type": "boolean", "default": false},
    "backup": {"type": "boolean", "default": true}
  },
  "required": ["operations"]
}